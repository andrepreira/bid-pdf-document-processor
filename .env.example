# Database Configuration
POSTGRES_DB=bid_processor
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/bid_processor

# Pipeline Source Directory (container path)
SOURCE_DIR=/app/source/source_files/

# LLM Configuration (Optional - choose your provider)
# Google Gemini (Recommended - Fast and cost-effective)
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI GPT
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LLM Settings
LLM_MODEL=gemini/gemini-1.5-flash  # Options: gemini/gemini-1.5-flash, gpt-4, claude-3-sonnet, ollama/llama2
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=4000

# Logging
LOG_LEVEL=INFO

# Pipeline Configuration
BATCH_SIZE=10
MAX_WORKERS=4

# OCR Configuration
OCR_ENABLED=true
OCR_TIMEOUT_SECONDS=300
